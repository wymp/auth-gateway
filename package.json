{
  "name": "@wymp/auth-gateway",
  "version": "1.0.0",
  "description": "A functioning auth gateway for receiving, authenticating and proxying requests into a system.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "scripts/build",
    "docgen": "npx redoc-cli bundle -o docs/api.v1.html docs/Wymp-Auth-Gateway-API.v1.json",
    "test": "jest",
    "compile-start": "npx -p typescript tsc && node ./dist/run/app.js",
    "start": "node ./dist/run/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:wymp/auth-gateway.git"
  },
  "keywords": [
    "Authentication",
    "Authorization",
    "Gateway",
    "API Gateway",
    "APIs"
  ],
  "author": "Kael Shipman",
  "contributors": "Various Contributors (https://github.com/wymp/ts-accounts-module/graphs/contributors)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wymp/auth-gateway/issues"
  },
  "homepage": "https://github.com/wymp/auth-gateway#readme",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/http-proxy": "^1.17.7",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^14.17.27",
    "@wymp/http-errors": "^1.7.0",
    "@wymp/http-utils": "^2.0.0",
    "@wymp/sql": "^1.0.0-beta10",
    "@wymp/ts-simple-interfaces": "^0.5.2",
    "@wymp/types": "0.1.0-rc8",
    "@wymp/weenie-framework": "^0.5.6",
    "bcryptjs": "^2.4.3",
    "cidr-matcher": "^2.1.1",
    "http-proxy": "^1.18.1",
    "jsonwebtoken": "^8.5.1",
    "rate-limiter-flexible": "^2.3.1",
    "runtypes": "^6.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@wymp/ts-simple-interfaces-testing": "^0.5.1",
    "husky": "^6.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "redoc-cli": "^0.12.3",
    "simple-http-client-rpn": "^0.5.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit-tests",
        "testEnvironment": "node",
        "verbose": true,
        "testMatch": [
          "<rootDir>/tests/**/*.spec.ts",
          "!**/e2e.spec.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
          "ts-jest": {
            "tsconfig": "tsconfig.test.json"
          }
        }
      },
      {
        "displayName": "e2e-tests",
        "testEnvironment": "node",
        "verbose": true,
        "maxWorkers": 1,
        "testMatch": [
          "<rootDir>/tests/e2e.spec.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
          "ts-jest": {
            "tsconfig": "tsconfig.test.json"
          }
        }
      }
    ]
  }
}
